<%- include('partials/header') %>

<div class="search">
    <form method="POST" action="/pinsearch">
    <p><input type="text" name="pin" pattern="[0-9]{6}" required placeholder="Search using PIN Code"> <input type="submit" class="btn btn-outline-success"></p>
    </form>
    <p>Total Resources available:<%=reso.length%></p>
</div>

<div class="viewpage">
<% reso.reverse().forEach(function(el){%>
    <div class="vcard">
        <table>
            <tr>
                <td>Name:</td>
                <td><%= el.name %></td>
            </tr>
            <tr>
                <td>Contact:</td>
                <td>+91 <%= el.contact %></td>
            </tr><tr>
                <td>PIN:</td>
                <td><%= el.pin %></td>
            </tr><tr>
                <td>City:</td>
                <td><%= el.city %></td>
            </tr><tr>
                <td>State:</td>
                <td><%= el.state %></td>
            </tr><tr>
                <td>Resource:</td>
                <td><%= el.type %></td>
            </tr><tr>
                <td>Posted On:</td>
                <td><%= el.created.toDateString() %></td>
            </tr>
        </table>
    </div>
<%});%>
</div>
<%- include('partials/footer') %>